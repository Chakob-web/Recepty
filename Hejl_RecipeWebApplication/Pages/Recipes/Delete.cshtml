@page "{id}"
@model Hejl_RecipeWebApplication.Pages.Recipes.DeleteModel

@{
    Layout = "_layout";
}

<h2>Delete Recipe</h2>
<p>Are you sure you want to delete this recipe?</p>

<div>
    <strong>Title:</strong> @Model.Recipe.Title <br />
    <strong>Description:</strong> @Model.Recipe.Description <br />
    <strong>Ingredients:</strong> @Model.Recipe.Ingredients <br />
    <strong>Instructions:</strong> @Model.Recipe.Instructions <br />
</div>

<form method="post">
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Page("/Index")" class="btn btn-secondary">Cancel</a>
</form>
