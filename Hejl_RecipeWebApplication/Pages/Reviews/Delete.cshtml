@page "{id}"
@model Hejl_RecipeWebApplication.Pages.Reviews.DeleteModel

@{
    Layout = "_Layout";
}

<h2>Delete Review</h2>

<p>Are you sure you want to delete this review?</p>

<p>
    <strong>@Model.Review?.Author</strong> - ⭐ @Model.Review?.Rating / 5 <br />
    @Model.Review?.Comment
</p>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Review.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-page="/Recipes/Detail" asp-route-id="@Model.Review.RecipeId" class="btn btn-secondary">Cancel</a>
</form>
